{
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./test",
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "lib": ["DOM", "ES2021"],
    "resolveJsonModule": true,
    "typeRoots": ["src/types/global.d.ts", "src/types/node.d.ts"]
  },
  "exclude": ["build/**/*","test/**/*"]
}
